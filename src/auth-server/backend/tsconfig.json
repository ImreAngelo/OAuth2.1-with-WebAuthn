{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "baseUrl": "src", // base folder for resolving non-relative imports
    "paths": {
      "@*": ["*"]
    }
  },
  "include": ["src"]
}